{
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 7
    },
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "modules": true,
      "spread": true,
      "globalReturn": true
    },
    "rules": {
      "valid-jsdoc": ["warn", {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": true,
        "requireReturnDescription": true,
        "preferType": {
          "String": "string",
          "object": "Object"
        }
      }],
      "no-var": 1,
      "no-eval": "warn",
      "indent": ["warn", 4],
      "quotes": ["warn", "double"],
      "space-before-function-paren": ["warn", "never"],
      "padded-blocks": ["warn", "always"],
      "prefer-arrow-callback": [0, { "allowNamedFunctions": true }],
      "func-names": ["warn", "never"],
      "no-use-before-define": [
        "warn", {
          "functions": true,
          "classes": true
        }
      ],
      "max-nested-callbacks": [
        "warn",
        5
      ]
    }
  }